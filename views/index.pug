	script.
		$(document).ready(function(){
		// CLICK ON ARROW OR ON VIDEO TO GO FROM PREPAGE TO HOMEPAGE SECTION
			$("#arrowPrepage").click(function() {
				$('html, body').animate({
					scrollTop: $("#startHomepage").offset().top
				}, 2000);
			});

			$("#divPrepageVideo").click(function() {
				$('html, body').animate({
					scrollTop: $("#startHomepage").offset().top
				}, 2000);
			});

		// ON SCROLL VIDEO'S OPACITY CHANGES + NAVBAR WILL (DIS)APPEAR
			var movieDiv = $('.prepageRow');
			var range = 250;

			$("#navbarID").hide();
			$(".navbarspacing").hide();

			$(window).scroll(function (e) {
			  var scrollTop = $(this).scrollTop(),
				  height = movieDiv.outerHeight(),
				  offset = height / 2.5,
				  calc = 1 - (scrollTop - offset + range) / range;

			  movieDiv.css({ 'opacity': calc });

			  if (calc > '0.75') {
				movieDiv.css({ 'opacity': 1 });
				$("#navbarID").fadeOut();

			  } else if ( calc < '0' ) {
				movieDiv.css({ 'opacity': 0 });
				$("#navbarID").fadeIn();
			  } 
			});


		})
